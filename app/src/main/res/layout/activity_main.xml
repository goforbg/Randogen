<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:background="@color/cardview_light_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false">

            <TextView
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/tvRandomQuote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-light"
                android:text="Could you be watching any more episodes?!"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="120dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="120dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="10dp">


                <ImageView
                    android:id="@+id/episodeImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:cropToPadding="false"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pic_021" />

                <ImageView
                    android:id="@+id/gradientImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/gradation_black" />

                <TextView
                    android:id="@+id/firstRunText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="-60dp"
                    android:fontFamily="sans-serif-medium"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:text="Oh baby, you are in for a binge!"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="40sp"
                    android:textStyle="italic" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/firstRunLottie"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    app:lottie_autoPlay="true"
                    app:lottie_fileName="firstRunLottie.json"
                    app:lottie_loop="true"
                    app:lottie_speed="1.25"/>

                <TextView
                    android:id="@+id/episodeTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Click the button to binge on an amazing episode!"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="30sp"
                    android:textStyle="bold" />


            </androidx.cardview.widget.CardView>


        </RelativeLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginTop="-100dp"
            app:cardCornerRadius="50dp">

            <TextView
                android:id="@+id/randombutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:fontFamily="sans-serif-light"
                android:padding="20dp"
                android:text="Choose Next Random Episode"
                android:textColor="@color/cardview_light_background"
                android:textSize="20sp" />

        </androidx.cardview.widget.CardView>



    </LinearLayout>


</LinearLayout>
